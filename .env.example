# --- Public (Client-side) ---
# Supabase API (Project Settings -> API)
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"

# App URL (for redirects/links)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# --- Private (Server-side) ---
# Supabase Admin (Project Settings -> API -> service_role)
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# Direct DB Connection (Project Settings -> Database -> Connection String -> URI)
# Required for SQL Editor / Admin Console
SUPABASE_DB_URL="postgresql://postgres:[PASSWORD]@db.[REF].supabase.co:5432/postgres"

# Stripe (Optional for payments)
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
STRIPE_PRICE_MONTHLY="price_..."
STRIPE_PRICE_ANNUAL="price_..."

# Admin Setup
# Token used to bootstrap the first root admin user via /api/admin-auth/bootstrap
ADMIN_BOOTSTRAP_TOKEN="make-up-a-secure-random-string"